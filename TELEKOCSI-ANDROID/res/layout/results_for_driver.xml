<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/fd"
>
	<!-- Header -->
	<LinearLayout
	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris"
    android:padding="5px"
    >
    	<ImageView
    	android:src="@drawable/car"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingRight="5px"
    	/>
    	<TextView
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:color="@color/txtEntete"
    	android:text="@string/results_for_driver"
    	android:textSize="20px"
    	android:textStyle="bold"
    	android:gravity="center_vertical"
    	/>
    </LinearLayout>
    
    <!-- Main -->
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5px"
    >
    	
    	<!-- Identification du trajet -->
    	<TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:text="@string/identTrajet"
	    	android:textColor="@color/h2_color"
	    	android:background="@color/grisc"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
   		/>    	
    	
    	<LinearLayout
    	    android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@color/fondPanel"
    		android:layout_marginLeft="5px"
    		android:layout_marginRight="5px"
    		android:layout_marginTop="5px"
    		android:layout_marginBottom="5px"
    		>
    		
   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/depart"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
    				android:layout_marginTop="1px"
   					/>   

	    		<TextView
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Nantes"
	    			android:id="@+id/driver_results_departure"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	    			android:layout_marginTop="1px"
	   				/>
   			</LinearLayout>

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/arrivee"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Lyon"
	    			android:id="@+id/driver_results_arrival"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   						 							
   			</LinearLayout>

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/le"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView  
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Lundi 15 novembre 2010"
	    			android:id="@+id/driver_results_date"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   							
   			</LinearLayout>
   			
   		</LinearLayout>
   			
   		<LinearLayout
   	 	android:orientation="horizontal"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content">
    		
   			<TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:text="@string/resultats"
    		android:id="@+id/driver_results_counts"
	    	android:textColor="@color/h2_color"
	    	android:background="@color/grisc"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
   			/>  
   				
    		<ImageButton
    		android:src="@drawable/previous"
    		android:id="@+id/driver_results_previous"
    		android:layout_width="24px"
    		android:layout_height="24px"
    		android:layout_marginLeft="80px"
    		android:layout_marginTop="5px"
    		/>   			 

	   		<TextView
	   		android:id="@+id/driver_results_pages"
	   		android:layout_width="wrap_content" 
	   		android:layout_height="wrap_content" 
	   		android:text="@string/page"
	   		android:textColor="@color/black"
	   		android:layout_marginLeft="10px"
	   		android:layout_marginTop="5px"
			/>
				
			<ImageButton
    		android:src="@drawable/next"
    		android:id="@+id/driver_results_next"
    		android:layout_width="24px"
    		android:layout_height="24px"
    		android:layout_marginLeft="10px"
    		android:layout_marginTop="5px"
    		/>
    						
   		</LinearLayout>
   			
   		<ListView
   		android:id="@+id/driver_results_list_id"
		android:layout_width="fill_parent" 
		android:layout_height="210px"
		android:drawSelectorOnTop="false"
	   	/>
	
    </LinearLayout>
    
    <!-- Footer -->
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/panelAction"
    android:padding="5px"
    >
    	<Button
    	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
    	android:text="@string/back_button"
    	android:id="@+id/driver_results_quit_button"
    	/>
    </LinearLayout>
    
</LinearLayout>