<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="horizontal"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/entete"
    	>

    	<ImageButton
    		android:src="@drawable/car"
    		android:layout_width="24px"
    		android:layout_height="24px"
    		android:background="@color/entete"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
    		/>

    	<TextView
    		android:text="@string/rechTransport"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5px"
    		android:textColor="@color/txtEntete"
    		android:textSize="24px"
    		android:textStyle="bold"
    		/>

    </LinearLayout>

	<!-- Selection d'un trajet existant ou saisie -->
    <LinearLayout
        android:orientation="vertical"
   		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/fond"
    	>
    	
    	<TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:text="@string/identTrajet"
    		android:textColor="@color/white"
    		android:background="@color/txtGroupe"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
   		/>

   		<RadioGroup
    	    android:orientation="horizontal"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@color/fond"
    		>

    		<RadioButton
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:background="@color/fond"
    			android:text="Mes trajets"
    			android:paddingLeft="38px"
    			android:paddingRight="5px"
    			/>

    		<RadioButton
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:background="@color/fond"
    			android:text="Autre trajet"
    			android:paddingLeft="38px"
    			/>
	
    	</RadioGroup>  
    	
    	<Spinner
    		android:id="@+id/spinTrajet"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:drawSelectorOnTop="true" 
    		/>
    	
    	<LinearLayout
    	    android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@color/fondPanel"
    		android:layout_marginLeft="5px"
    		android:layout_marginRight="5px"
    		android:layout_marginTop="5px"
    		android:layout_marginBottom="5px"
    		>
    		
   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/depart"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
    				android:layout_marginTop="1px"
   					/>   

	    		<TextView
	    			android:id="@+id/tvDepart"
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Les Herbiers"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	    			android:layout_marginTop="1px"
	   				/>									
   			</LinearLayout>

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/heure"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView  
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="7h10"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>

	    		<TextView  
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="+/- 5mn"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="25px"
	   				/>
				
   			</LinearLayout>  

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/arrivee"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView  
	    			android:id="@+id/tvArrivee"
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Nantes"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   						 							
   			</LinearLayout>

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/jours"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView  
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="L M M J V - -"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   							
   			</LinearLayout>  

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/autoroute"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView  
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="non"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   							
   			</LinearLayout>
   			 			
   		</LinearLayout>

   		<LinearLayout
   		    android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@color/fond"
    		android:layout_marginLeft="5px"
    		android:layout_marginRight="5px"
    		android:layout_marginTop="5px">
    		
    		<TextView  
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:text="@string/dateTrajet"
    			android:textColor="@color/white"
    			android:background="@color/txtGroupe"
   				/> 
    		
    		<Spinner
    			android:id="@+id/spinDateTrajet"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:drawSelectorOnTop="true" 
    			android:layout_marginTop="5px"
    			/>
	   							
   		</LinearLayout> 
   		
   		<LinearLayout
    	   	android:orientation="horizontal"
    	   	android:background="@color/panelAction"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    		
    		<Button
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content"
    			android:text="@string/rechercher"
    			android:textColor="@color/black"
    			android:layout_marginLeft="5px"
    			android:layout_marginTop="5px"
   				/>
   					
   			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/annuler"
    			android:textColor="@color/black"
    			android:layout_marginLeft="5px"
    			android:layout_marginTop="5px"
    			/>
	   							
   		</LinearLayout>  		
   		
    </LinearLayout> 
   
</LinearLayout>

