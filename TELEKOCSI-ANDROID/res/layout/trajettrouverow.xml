<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
   	android:layout_height="fill_parent"
   	>
   				
   	<TableRow 
   		android:background="@color/white"
   		android:layout_marginLeft="5px"
   		android:layout_marginRight="5px"
   		android:layout_marginTop="5px"
   		android:layout_marginBottom="5px">
   					
   		<LinearLayout
    		android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    					
    		<ImageView
    			android:src="@drawable/visagefemme1"
    			android:scaleType="centerInside"
    			android:layout_width="50px"
    			android:layout_height="50px"
    			android:layout_marginLeft="5px"
   				android:layout_marginBottom="5px"
    		/>
    					 
   		</LinearLayout>

   		<LinearLayout
    		android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    					
	   		<TextView
	   			android:layout_width="wrap_content" 
	   			android:layout_height="wrap_content" 
	   			android:text="Julie Les."
	   			android:id="@+id/tvTTRowNomConducteur"
	   			android:textColor="@color/black"
	   			android:layout_marginLeft="10px"
				/>
							
			<ImageView
				android:src="@drawable/fivestarjaune"
				android:layout_width="80px"
    			android:layout_height="20px"
   				android:scaleType="centerInside"
   				android:layout_marginLeft="8px"
   				/>

  			<TextView
   				android:layout_width="wrap_content" 
   				android:layout_height="wrap_content" 
   				android:text="5 avis"
   				android:id="@+id/tvTTRowNombreAvis"
   				android:textColor="@color/black"
   				android:layout_marginLeft="10px"
				/>
    					 
		</LinearLayout>
   					
		<LinearLayout
   			android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    					
	   		<TextView
	   			android:layout_width="wrap_content" 
	   			android:layout_height="wrap_content" 
	   			android:text="Aujourd'hui Ã  7h25"
	   			android:id="@+id/tvTTRowDateHeure"
	   			android:textColor="@color/black"
	   			android:layout_marginLeft="10px"
				/>

	   		<TextView
	   			android:layout_width="wrap_content" 
	   			android:layout_height="wrap_content" 
	   			android:text="2 places disponibles"
	   			android:id="@+id/tvTTRowNbPlaceDispo"
	   			android:textColor="@color/black"
	   			android:layout_marginLeft="10px"
				/>

   			<TextView
   				android:layout_width="wrap_content" 
   				android:layout_height="wrap_content" 
   				android:text="3 points"
   				android:id="@+id/tvTTRowNbPoint"
   				android:textColor="@color/black"
   				android:layout_marginLeft="10px"
				/>
							 
  		</LinearLayout>
   					
   		<LinearLayout
    		android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    					
    		<ImageView
    			android:src="@drawable/next1"
    			android:scaleType="centerInside"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_marginLeft="2px"
   				android:layout_marginBottom="5px"
    		/>
    					 
   		</LinearLayout>
   					
	</TableRow>
   				
</TableLayout>   					
