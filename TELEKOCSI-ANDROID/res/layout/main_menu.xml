    	<FrameLayout
		android:layout_width="fill_parent"
  		android:layout_height="150px"
  		>
    		<SlidingDrawer
     		android:id="@+id/driver_drawer"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
     		android:handle="@+id/driver_handle"
     		android:content="@+id/driver_content"
     		>
	     	
	     	    	
	     	
