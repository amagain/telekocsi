        				android:layout_width="fill_parent"
        				android:layout_height="wrap_content"
        				android:text="@string/route_modification"
        				/>
        				<Button
        				android:layout_width="fill_parent"
        				android:layout_height="wrap_content"
        				android:text="@string/transaction_validation"
        				/>
        				<Button
        				android:layout_width="fill_parent"
        				android:layout_height="wrap_content"
        				android:text="@string/profile_settings"
        				/>
        			</LinearLayout>
	         	</ScrollView>
			</SlidingDrawer>
		</FrameLayout>
		
