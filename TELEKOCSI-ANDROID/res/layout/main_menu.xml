    android:background="@color/fond"
    android:id="@id/driver_handle"
    android:gravity="left"
    >

	<ImageView
    		android:src="@drawable/volant"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingRight="10px"
