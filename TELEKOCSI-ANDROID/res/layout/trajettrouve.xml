<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/fd"
    >

    <LinearLayout
        android:orientation="horizontal"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/gris"
    	>

    	<ImageButton
    		android:src="@drawable/car"
    		android:layout_width="24px"
    		android:layout_height="24px"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
    		/>

    	<TextView
    		android:text="@string/trajetfind"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5px"
    		android:textColor="@color/txtEntete"
    		android:textSize="24px"
    		android:textStyle="bold"
    		/>

    </LinearLayout>

	<!-- Selection d'un trajet existant ou saisie -->
    <LinearLayout
        android:orientation="vertical"
   		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	>
    	
    	<TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:text="@string/identTrajet"
	    	android:textColor="@color/h2_color"
	    	android:background="@color/grisc"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
   		/>    	
    	
    	<LinearLayout
    	    android:orientation="vertical"
   			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@color/fondPanel"
    		android:layout_marginLeft="5px"
    		android:layout_marginRight="5px"
    		android:layout_marginTop="5px"
    		android:layout_marginBottom="5px"
    		>
    		
   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/depart"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
    				android:layout_marginTop="1px"
   					/>   

	    		<TextView
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Les Herbiers"
	    			android:id="@+id/tvTTVilleDepart"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	    			android:layout_marginTop="1px"
	   				/>
   			</LinearLayout>

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/arrivee"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Nantes"
	    			android:id="@+id/tvTTVilleArrivee"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   						 							
   			</LinearLayout>

   			<LinearLayout
    	 	   	android:orientation="horizontal"
   				android:layout_width="wrap_content"
    			android:layout_height="wrap_content">
    		
    			<TextView  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/le"
    				android:textColor="@color/black"
    				android:textStyle="bold"
    				android:layout_marginLeft="5px"
   					/>   

	    		<TextView  
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content" 
	    			android:text="Lundi 15 novembre 2010"
	    			android:id="@+id/tvTTDate"
	    			android:textColor="@color/black"
	    			android:layout_marginLeft="5px"
	   				/>
	   							
   			</LinearLayout>
   			 			
   		</LinearLayout>

   	   	<LinearLayout
   	 	   	android:orientation="horizontal"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content">
    		
   			<TextView  
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:text="@string/resultats"
    			android:id="@+id/tvTTResultat"
	    		android:textColor="@color/h2_color"
	    		android:background="@color/grisc"
    			android:layout_marginLeft="5px"
    			android:layout_marginTop="5px"
   				/>  
   				
   				
    		<ImageButton
    			android:src="@drawable/previous"
    			android:id="@+id/ibTTPrevious"
    			android:layout_width="24px"
    			android:layout_height="24px"
    			android:layout_marginLeft="80px"
    			android:layout_marginTop="5px"
    			/>   			 

	   		<TextView
	   			android:id="@+id/tvTTPage"
	   			android:layout_width="wrap_content" 
	   			android:layout_height="wrap_content" 
	   			android:text="@string/page"
	   			android:textColor="@color/black"
	   			android:layout_marginLeft="10px"
	   			android:layout_marginTop="5px"
				/>
				
			<ImageButton
    			android:src="@drawable/next"
    			android:id="@+id/ibTTNext"
    			android:layout_width="24px"
    			android:layout_height="24px"
    			android:layout_marginLeft="10px"
    			android:layout_marginTop="5px"
    			/>
    						
   		</LinearLayout>
   		
   			
   		<ListView
   			android:id="@+id/lvTTListConducteur"
			android:layout_width="fill_parent" 
			android:layout_height="210px"
			android:drawSelectorOnTop="false"	
   		/>
   		
   		<LinearLayout
    	   	android:orientation="horizontal"
    	   	android:background="@color/panelAction"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    		
    		<Button
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content"
    			android:text="@string/newsearch"
    			android:id="@+id/btTTNewSearch"
    			android:textColor="@color/black"
    			android:layout_marginTop="5px"
   				/>
   					
   			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/quit"
				android:id="@+id/btTTQuit"
    			android:textColor="@color/black"
    			android:layout_marginTop="5px"
    			/>
	   							
   		</LinearLayout>  		
   		
    </LinearLayout> 
   
</LinearLayout>

