<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/fd"
    >

    <LinearLayout
        android:orientation="horizontal"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/gris"
    	>

    	<ImageButton
    		android:src="@drawable/car"
    		android:layout_width="24px"
    		android:layout_height="24px"
    		android:layout_marginLeft="5px"
    		android:layout_marginTop="5px"
    		/>

    	<TextView
    		android:text="@string/trajetManaging"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5px"
    		android:textColor="@color/txtEntete"
    		android:textSize="24px"
    		android:textStyle="bold"
    		/>

    </LinearLayout>

	<!-- Selection d'un trajet existant ou saisie -->
    <LinearLayout
        android:orientation="vertical"
   		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	>  	
    	
   	   	<LinearLayout
   	 	   	android:orientation="horizontal"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content">
    		
   			<TextView  
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:text="@string/resultats"
    			android:id="@+id/tvTMResultat"
	    		android:textColor="@color/h2_color"
	    		android:background="@color/grisc"
    			android:layout_marginLeft="5px"
    			android:layout_marginTop="5px"
   				/>  
   				
   				
    		<ImageButton
    			android:src="@drawable/previous"
    			android:id="@+id/ibTMPrevious"
    			android:layout_width="24px"
    			android:layout_height="24px"
    			android:layout_marginLeft="80px"
    			android:layout_marginTop="5px"
    			/>   			 

	   		<TextView
	   			android:id="@+id/tvTMPage"
	   			android:layout_width="wrap_content" 
	   			android:layout_height="wrap_content" 
	   			android:text="@string/page"
	   			android:textColor="@color/black"
	   			android:layout_marginLeft="10px"
	   			android:layout_marginTop="5px"
				/>
				
			<ImageButton
    			android:src="@drawable/next"
    			android:id="@+id/ibTMNext"
    			android:layout_width="24px"
    			android:layout_height="24px"
    			android:layout_marginLeft="10px"
    			android:layout_marginTop="5px"
    			/>
    						
   		</LinearLayout>
   		
   			
   		<ListView
   			android:id="@+id/lvTMListTrajet"
			android:layout_width="fill_parent" 
			android:layout_height="300px"
			android:drawSelectorOnTop="false"	
   		/>
   		
   		<LinearLayout
    	   	android:orientation="horizontal"
    	   	android:background="@color/panelAction"
   			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_marginTop="5px">
    		
    		<Button
    			android:layout_width="wrap_content" 
    			android:layout_height="wrap_content"
    			android:text="@string/btNewTrajet"
    			android:id="@+id/btTMNewTrajet"
    			android:textColor="@color/black"
    			android:layout_marginTop="5px"
   				/>
   					
   			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/quit"
				android:id="@+id/btTMQuit"
    			android:textColor="@color/black"
    			android:layout_marginTop="5px"
    			/>
	   							
   		</LinearLayout>  		
   		
    </LinearLayout> 
   
</LinearLayout>