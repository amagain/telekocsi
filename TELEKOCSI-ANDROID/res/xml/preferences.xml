<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
	android:title="Mon compte">
		<EditTextPreference
		android:key="email"
		android:title="Adresse email"
		android:summary="Entrez votre nouvelle adresse email"
		android:inputType="textEmailAddress"
		/>

		<EditTextPreference
		android:title="Mot de passe"
		android:key="password"
		android:summary="Entrez votre nouveau mot de passe"
		android:inputType="textPassword"
		/>
	</PreferenceCategory>

	<PreferenceCategory
	android:title="Notifications">
		<RingtonePreference
		android:key="song"
		android:title="Sonnerie de notification"
		android:summary="Choisissez la sonnerie pour les notifications"
		/>
		
		<CheckBoxPreference
		android:key="vibrate"
		android:title="Vibreur"
		android:summary="Vibre lors d'une notification"
		/>
	</PreferenceCategory>
	
	<PreferenceCategory
	android:title="En tant que passager">
	</PreferenceCategory>

	<PreferenceCategory
	android:title="En tant que conducteur">
	</PreferenceCategory>

</PreferenceScreen>
